{
  "name": "iso-hooks",
  "version": "0.0.1",
  "description": "A collection of modern, SSR-safe React hooks.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
